<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="PageBackground">#F8F8F8</Color>
    <Color x:Key="TopBarBackground">#FFFFFF</Color>
    <Color x:Key="NavBackground">#F0F0F0</Color>
    <Color x:Key="InfoBackground">#E8E8E8</Color>
    <Color x:Key="PrimaryColor">#007ACC</Color>
    <Color x:Key="SecondaryText">#666666</Color>
    <Color x:Key="TopBarText">#333333</Color>
    <Color x:Key="NavHeaderText">#888888</Color>
    <Color x:Key="NavItemText">#333333</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    
    <Style x:Key="H1Style" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
    </Style>

    <Style x:Key="H2Style" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryText}" />
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource SecondaryText}" />
    </Style>

    <Style x:Key="TopBarItemStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TopBarText}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="NavSectionHeaderStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource NavHeaderText}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,16,0,8" />
    </Style>

    <Style x:Key="NavItemStyle" TargetType="Label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="{StaticResource NavItemText}" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="14" />
    </Style>

     <Style x:Key="CardFrameStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Gray200}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="0" />
    </Style>

</ResourceDictionary>